<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="RuchProstokata1.ArticleControl"
	x:Name="UserControl" Height="69" Width="72" MouseDoubleClick="UserControl_MouseDoubleClick">

	<Grid x:Name="LayoutRoot">
		<Border BorderBrush="Black" BorderThickness="2" x:Name="Herbata"
			Background="White" CornerRadius="4">
			<StackPanel Orientation="Horizontal">
				<Image   x:Name="image1" Stretch="Uniform" Width="65"  Margin="2" >
					 
				</Image>
				<StackPanel Width="60">
                    
					<TextBlock x:Name="nazwa" Margin="0 10 0 0" TextWrapping="WrapWithOverflow"/>
                    <TextBlock x:Name="cena" Margin="0 10 0 0"/>
                  
				</StackPanel>
                
			</StackPanel>
		</Border>
	</Grid>
</UserControl>